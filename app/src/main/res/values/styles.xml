<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style
        name="Source"
        parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">?attr/textColor</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">0dp</item>
    </style>
    <style name="Source.Cozy">
        <item name="android:textSize">@dimen/textNormal</item>
    </style>
    <style name="Source.Compact">
        <item name="android:textSize">@dimen/textSmall</item>
    </style>
    <style name="Source.Details">
        <item name="android:maxLines">2147483647</item>
        <item name="android:ellipsize">none</item>
        <item name="android:textSize">@dimen/textNormal</item>
    </style>
    <style
        name="Meta"
        parent="@style/TextAppearance.AppCompat.Subhead">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">?attr/textColorHint</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">0dp</item>
    </style>
    <style name="Meta.Cozy">
        <item name="android:textSize">@dimen/textSmall</item>
    </style>
    <style name="Meta.Compact">
        <item name="android:textSize">@dimen/textSmall</item>
    </style>
    <style name="Meta.Details">
        <item name="android:maxLines">2147483647</item>
        <item name="android:ellipsize">none</item>
        <item name="android:textSize">@dimen/textSmall</item>
    </style>
    <style
        name="Title"
        parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">?attr/textColor</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">0dp</item>
    </style>
    <style name="Title.Cozy">
        <item name="android:maxLines">2</item>
        <item name="android:textSize">@dimen/textLarge</item>
        <item name="android:autoLink">web</item>
    </style>
    <style name="Title.Compact">
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/textNormal</item>
        <item name="fontPath">fonts/Lato-Bold.ttf</item>
    </style>
    <style name="Title.Details">
        <item name="android:layout_marginLeft">@dimen/space16</item>
        <item name="android:layout_marginStart">@dimen/space16</item>
        <item name="android:layout_marginRight">@dimen/space16</item>
        <item name="android:layout_marginEnd">@dimen/space16</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:maxLines">2147483647</item>
        <item name="android:ellipsize">none</item>
        <item name="android:textSize">@dimen/textLarge</item>
    </style>
    <style name="Title.Featured">
        <item name="android:padding">@dimen/space16</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:textSize">@dimen/textLarge</item>
        <item name="android:textColor">#ddffffff</item>
        <item name="android:shadowDx">2.5</item>
        <item name="android:shadowDy">2.5</item>
        <item name="android:shadowRadius">2.5</item>
        <item name="android:shadowColor">@color/shadowEnd</item>
    </style>
    <style
        name="Description"
        parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">?attr/textColor</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">0dp</item>
    </style>
    <style name="Description.Cozy">
        <item name="android:maxLines">5</item>
        <item name="android:textSize">@dimen/textNormal</item>
        <item name="android:autoLink">web</item>
    </style>
    <style name="Description.Compact">
        <item name="android:maxLines">2</item>
        <item name="android:textSize">@dimen/textNormal</item>
    </style>
    <style name="Description.Details">
        <item name="android:layout_marginLeft">@dimen/space16</item>
        <item name="android:layout_marginStart">@dimen/space16</item>
        <item name="android:layout_marginRight">@dimen/space16</item>
        <item name="android:layout_marginEnd">@dimen/space16</item>
        <item name="android:maxLines">2147483647</item>
        <item name="android:ellipsize">none</item>
        <item name="android:textSize">@dimen/textNormal</item>
        <item name="android:textColor">?attr/textColor</item>
    </style>
    <style
        name="Icon"
        parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>
    <style name="Icon.Small">
        <item name="android:layout_width">@dimen/iconSmall</item>
        <item name="android:layout_height">@dimen/iconSmall</item>
    </style>
    <style
        name="TransparentText"
        parent="@android:style/TextAppearance">
        <item name="android:textColor">#00ffffff</item>
    </style>
    <style
        name="Card"
        parent="@style/Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="cardBackgroundColor">?attr/cardBackground</item>
    </style>
    <style
        name="PopupMenuLight"
        parent="@style/Widget.MaterialComponents.PopupMenu">
        <item name="android:popupBackground">?attr/windowBackground</item>
    </style>
    <style
        name="PopupMenuDark"
        parent="@style/Widget.MaterialComponents.PopupMenu.Dark">
        <item name="android:popupBackground">?attr/windowBackground</item>
    </style>

    <!-- ExoPlayer -->
    <style name="ExoPlayerControlButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
    </style>
    <style name="ExoPlayerControlItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/space8</item>
        <item name="android:paddingStart">@dimen/space8</item>
        <item name="android:paddingRight">@dimen/space8</item>
        <item name="android:paddingEnd">@dimen/space8</item>
        <item name="android:textSize">@dimen/textSmall</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#bebebe</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- About -->
    <style name="about_About.wrapper">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:background">?attr/windowBackground</item>
    </style>
    <style
        name="about_description"
        parent="@android:style/TextAppearance">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lineSpacingExtra">@dimen/space8</item>
        <item name="android:layout_marginBottom">@dimen/space16</item>
        <item name="android:textColor">?attr/textColor</item>
        <item name="android:textSize">@dimen/about_description_text_size</item>
    </style>
    <style name="about_separator">
        <item name="android:layout_height">@dimen/about_separator_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">?attr/textColorHint</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>
</resources>
