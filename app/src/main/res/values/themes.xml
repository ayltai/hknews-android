        <item name="searchBarBackground">@color/searchBarBackgroundLight</item>
        <item name="listBackground">@color/listBackgroundLight</item>
        <item name="placeholderImage">@drawable/thumbnail_placeholder</item>
        <item name="customSearchBarStyle">@style/MaterialSearchBarLight</item>
        <item name="customToolbarStyle">@style/ThemeOverlay.AppCompat.ActionBar</item>
        <item name="customPopupStyle">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="dialogTheme">@style/DialogThemeLight</item>
        <item name="alertDialogTheme">@style/DialogThemeLight</item>
        <item name="popupMenuStyle">@style/PopupMenuLight</item>
        <item name="android:popupMenuStyle">@style/PopupMenuLight</item>
    </style>
    <style name="AppTheme.Dark">
        <item name="primaryColor">@color/primaryColorDark</item>
