        <item name="popupMenuStyle">@style/PopupMenuDark</item>
        <item name="android:popupMenuStyle">@style/PopupMenuDark</item>
    </style>
    <style
        name="SplashTheme"
        parent="@style/Theme.MaterialComponents.NoActionBar" />
    <style name="SplashTheme.Light">
        <item name="android:windowBackground">@drawable/splash_light</item>
    </style>
    <style name="SplashTheme.Dark">
        <item name="android:windowBackground">@drawable/splash_dark</item>
    </style>
    <style
