<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.github.ayltai.hknews.widget.SmartCroppingImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/detailed_image_height_max"
            android:background="?attr/placeholderImage"
            app:initScaleType="centerCrop" />
        <FrameLayout
            android:id="@+id/play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:layout_gravity="center"
                android:paddingLeft="2dp"
                android:paddingStart="2dp"
                android:paddingRight="0dp"
                android:paddingEnd="0dp"
                android:paddingTop="2dp"
                android:contentDescription="@string/play"
                android:tint="@color/black"
                app:srcCompat="@drawable/ic_play_circle_outline_black_24dp" />
            <ImageView
                android:layout_width="@dimen/iconLarge"
                android:layout_height="@dimen/iconLarge"
                android:layout_gravity="center"
                android:contentDescription="@string/play"
                android:tint="@color/white"
                app:srcCompat="@drawable/ic_play_circle_outline_black_24dp" />
        </FrameLayout>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_banner"
        android:layout_gravity="bottom">
        <TextView
            android:id="@+id/description"
            tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit"
            style="@style/Title.Banner" />
    </FrameLayout>
</FrameLayout>
