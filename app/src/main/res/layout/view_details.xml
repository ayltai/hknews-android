<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/cardBackground"
    android:fitsSystemWindows="true">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/avatar"
                    android:layout_width="@dimen/cozy_icon_size"
                    android:layout_height="@dimen/cozy_icon_size"
                    android:layout_margin="@dimen/space16"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    tools:src="@tools:sample/avatars"
                    app:placeholderImage="?attr/placeholderImage"
                    app:fadeDuration="@android:integer/config_shortAnimTime" />
                <TextView
                    android:id="@+id/source"
                    android:layout_toRightOf="@+id/avatar"
                    android:layout_toEndOf="@+id/avatar"
                    android:layout_alignTop="@+id/avatar"
                    android:layout_alignWithParentIfMissing="true"
                    android:textIsSelectable="true"
                    tools:text="@tools:sample/cities"
                    style="@style/Source.Details" />
                <TextView
                    android:id="@+id/publish_date"
                    android:layout_marginTop="@dimen/space4"
                    android:layout_toRightOf="@+id/avatar"
                    android:layout_toEndOf="@+id/avatar"
                    android:layout_below="@+id/source"
                    android:layout_alignWithParentIfMissing="true"
                    android:textIsSelectable="true"
                    tools:text="@tools:sample/date/day_of_week"
                    style="@style/Meta.Details" />
                <xyz.hanks.library.bang.SmallBangView
                    android:id="@+id/smallBang"
                    android:layout_width="@dimen/iconLarge"
                    android:layout_height="@dimen/iconLarge"
                    android:layout_toLeftOf="@+id/action_view_on_web"
                    android:layout_toStartOf="@+id/action_view_on_web"
                    android:layout_alignParentTop="true">
                    <ImageView
                        android:id="@+id/action_bookmark"
                        android:layout_gravity="center"
                        android:contentDescription="@string/action_bookmark"
                        android:tint="?attr/textColor"
                        app:srcCompat="@drawable/ic_bookmark_black_24dp"
                        style="@style/Icon.Small"/>
                </xyz.hanks.library.bang.SmallBangView>
                <ImageView
                    android:id="@+id/action_view_on_web"
                    android:layout_marginRight="@dimen/space16"
                    android:layout_marginEnd="@dimen/space16"
                    android:layout_marginTop="@dimen/space16"
                    android:layout_marginBottom="@dimen/space16"
                    android:layout_toLeftOf="@+id/action_share"
                    android:layout_toStartOf="@+id/action_share"
                    android:layout_alignParentTop="true"
                    android:contentDescription="@string/action_view_on_web"
                    android:tint="?attr/textColor"
                    app:srcCompat="@drawable/ic_launch_black_24dp"
                    style="@style/Icon.Small" />
                <ImageView
                    android:id="@+id/action_share"
                    android:layout_marginRight="@dimen/space16"
                    android:layout_marginEnd="@dimen/space16"
                    android:layout_marginTop="@dimen/space16"
                    android:layout_marginBottom="@dimen/space16"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:contentDescription="@string/action_share"
                    android:tint="?attr/textColor"
                    app:srcCompat="@drawable/ic_share_black_24dp"
                    style="@style/Icon.Small" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/space16"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/title"
                    android:layout_marginBottom="@dimen/space16"
                    android:textIsSelectable="true"
                    tools:text="@tools:sample/lorem"
                    style="@style/Title.Details" />
                <TextView
                    android:id="@+id/description"
                    android:layout_marginBottom="@dimen/space16"
                    android:textIsSelectable="true"
                    android:autoLink="all"
                    tools:text="@tools:sample/lorem/random"
                    style="@style/Description.Details" />
                <FrameLayout
                    android:id="@+id/videos_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center" />
                <LinearLayout
                    android:id="@+id/images_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="true">
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
            app:contentScrim="?attr/primaryColor"
            app:expandedTitleTextAppearance="@style/TransparentText">
            <FrameLayout
                android:id="@+id/image_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
