<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View" />
        <import type="android.text.TextUtils" />
        <variable
            name="image"
            type="com.github.ayltai.hknews.data.model.Image" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/space16"
        android:orientation="vertical">
        <com.github.piasy.biv.view.BigImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/placeholderImage"
            app:imageUrl="@{image.imageUrl}"
            app:initScaleType="centerCrop"
            app:actualImageScaleType="centerCrop"
            app:fadeDuration="@android:integer/config_mediumAnimTime" />
        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/space8"
            android:layout_gravity="center_horizontal"
            android:autoLink="all"
            android:visibility="@{TextUtils.isEmpty(image.description) ? View.GONE : View.VISIBLE}"
            android:textIsSelectable="true"
            android:text="@{image.description}"
            tools:text="@tools:sample/lorem" />
    </LinearLayout>
</layout>
