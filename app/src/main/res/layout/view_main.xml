<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">
    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/windowBackground"
        app:elevation="0dp">
        <com.mancj.materialsearchbar.MaterialSearchBar
            android:id="@+id/searchBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space8"
            android:layout_marginStart="@dimen/space8"
            android:layout_marginRight="@dimen/space8"
            android:layout_marginEnd="@dimen/space8"
            android:layout_marginTop="@dimen/space8"
            android:fitsSystemWindows="true"
            app:layout_scrollFlags="scroll|enterAlways|snap"
            app:mt_searchBarColor="?attr/searchBarBackground"
            app:mt_placeholder="@string/app_name"
            app:mt_hint="@string/search_hint"
            style="?attr/customSearchBarStyle" />
    </com.google.android.material.appbar.AppBarLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:layout_behavior="@string/hide_bottom_view_on_scroll_behavior"
        app:labelVisibilityMode="labeled"
        app:elevation="@dimen/shadow"
        app:backgroundTint="?attr/windowBackground"
        app:itemIconTint="@color/bottom_tab_selector"
        app:itemTextColor="@color/bottom_tab_selector"
        app:menu="@menu/bottom" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>
